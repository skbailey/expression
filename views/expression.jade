extends layout

block content
  
  .container
    .row
      h2
        a(href="/expressions")
          | All Expressions
    .row
      .col-md-6
        = expression.english
      .col-md-6
        = expression.french
    .row
      .col-md-12
        ul
          - for snapshot in expression.snapshots
            li
              - var imgSrc = "/images/snapshots/" + snapshot
                img(src=imgSrc, alt=expression.english)